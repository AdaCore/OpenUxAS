cmake_minimum_required(VERSION 3.3)

# host directory for google test build, download and source
set(GTEST_DIR "gtest")

# google test build directory (built at same time as unit tests)
# https://code.google.com/p/googletest/wiki/FAQ#Why_is_it_not_recommended_to_install_a_pre-compiled_copy_of_Goog
set(GTEST_BUILD_DIR "build")

# directory containing google test package download
set(GTEST_DOWNLOAD_DIR "download")

# directory containing expanded google test package
set(GTEST_SRC_DIR "src")

# google test (gtest) package name
set(GTEST_VERSIONED_NAME "gtest-1.7.0")
